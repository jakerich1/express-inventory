<div class="middle-col">
    <h1>{{title}}</h1><a href='/catalog/product/create' style="font-weight: 300; cursor: pointer;">Add Product</a>
    <div class="all-product">

        {{#if products}}
            {{#each products}}
                <a class="pc-wrap" href={{this.url}}>
                    <div class="product-card">
                        <img onerror="this.src='/images/placehold.jpg'" src={{this.img_path}}>
                        <div class='card-detail'>
                            <div>
                                <h3>{{this.name}}</h3>
                                <h4>{{this.brand.name}}</h4>
                            </div>
                            <div>
                                Â£ {{this.price}}
                            </div>
                        </div>
                    </div>
                </a>
            {{/each}}
        {{/if}}
    </div>
</div>



